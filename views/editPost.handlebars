<form class="edit-post-form">
    <div class="field">
        <label for="title">Post Title</label>
        <div class="control">
            <input id="title" class="input" name="title" type="text" value="{{title}}"></label>
        </div>
    </div>
    <div class="field">
        <label for="content">Post Content</label>
        <div class="control">
            <input id="body" class="textarea" name="content" type="text" value="{{body}}">
        </div>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <button id="update" type="submit" class="button is-link">Update</button>
        </div>
        <div class="control">
            <button id="delete-btn" type="button" class="button is-link is-light">Delete</button>
        </div>
    </div>

</form>

{{#each comments as |comment|}}
{{> comments}}
{{/each}}

<script src="/js/editPost.js"></script>
